%ul
  %li= link_to('RateYourWriting', root_path)

  %li.header Latest
  %li= link_to('Submissions', submissions_path)
  %li= link_to('Poems', submissions_path(:kind => 'P'))
  %li= link_to('Short Stories', submissions_path(:kind => 'S'))

  - if logged_in? && current_user.admin?
    %li.header Admin
    %li= link_to('Users', users_path)
    %li= link_to('Quotes', quotes_path)

  %li.header Account
  - if logged_in?
    %li= link_to('Preferences', preferences_path)
    %li= link_to('New submission', new_submission_path)
    %li= link_to('Log out', logout_path, { :'data-confirm' => 'Are you sure you want to log out? '})
  - else
    %li= link_to('Log in', login_path)
    %li= link_to('Register', register_path)

  %li.header Information
  %li= link_to('About', about_path)
