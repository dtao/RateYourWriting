%section.comments
  %legend Comments
  - @comments.each do |comment|
    .comment
      = user_image_tag(comment.user, :class => 'profile-image')

      .content
        .commenter= link_to(comment.user.name, comment.user)
        .body!= to_markdown(comment.content)
        .time= "#{time_ago_in_words(comment.created_at)} ago"
