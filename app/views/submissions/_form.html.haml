= form_for(@submission) do |f|
  .field.kind
    = f.select :kind, Submission::KINDS

  .field
    = f.text_field :title, :placeholder => 'Enter a title'

  .field
    - if @submission.new_record?
      = markdown_editor(f, :body)
    - else
      = markdown_editor_with_diff(f, :body)

  .field.published
    = f.label :published do
      = f.check_box :published
      Publish

  = f.submit
