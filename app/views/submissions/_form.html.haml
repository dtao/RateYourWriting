= form_for(@submission) do |f|
  .field
    = f.select :kind, Submission::KINDS

  .field
    = f.text_field :title, :placeholder => 'Enter a title'

  .field
    = f.text_area :body, :class => 'editor', :placeholder => 'Write your content in Markdown format'
    %aside
      = "# Heading 1 | ## Heading 2 | *italic* | **bold** | `typewriter` |"
      = link_to('see more', markdown_help_path)

  .field.published
    = f.label :published do
      = f.check_box :published
      Publish

  = f.submit
